{{- define "name" -}}
Update{{ if not .Return }}NoReturn{{ end }}_{{ .Suffix }}
{{- end -}}

{{- define "signature" -}}
{{- template "name" . }}({{ ctxparam .Args }},
	update {{ .Struct.UpdateStructName }}) (
	{{ if .Return }}{{ param .Return }}, {{ end }}err error)
{{- end -}}

{{- define "invoke" -}}
{{- template "name" . }}({{ ctxarg .Args }}, update)
{{- end -}}

{{- define "body" -}}{{/* gotype: storj.io/dbx/code/golang.Update */}}
	{{ embedplaceholders .Info }}
	{{ embedsql .Info "__embed_stmt" }}

	__sets_sql := __sqlbundle_Literals{Join: ", "}
	var __values []any
	var __args []any

	{{ setupdatablefields .Struct.UpdatableFields }}

	{{- if .NeedsNow }}
	__now := obj.db.Hooks.Now().UTC()
	{{ end -}}
	{{ range .AutoFields }}
	__values = append(__values, {{ .InitVal }})
	__sets_sql.SQLs = append(__sets_sql.SQLs, __sqlbundle_Literal("{{ .Name }} = ?"))
	{{ end }}

	{{ if not .AutoFields }}
	if len(__sets_sql.SQLs) == 0 {
		{{- if .Return }}
		return nil, emptyUpdate()
		{{- else }}
		return emptyUpdate()
		{{- end }}
	}
	{{ end }}

	{{ embedvalues .Args "__args" }}

	__values = append(__values, __args...)
	__sets.SQL = __sets_sql

	var __stmt = __sqlbundle_Render(obj.dialect, __embed_stmt)
	obj.logStmt(__stmt, __values...)
	{{- if not .Return }}

	_, err = obj.driver.ExecContext(ctx, __stmt, __values...)
	if err != nil {
		return obj.makeErr(err)
	}
	return nil
	{{- else }}

	{{ init .Return }}
	__d := obj.driver
	var tx *sql.Tx
	if !obj.txn {
		tx, err = obj.db.DB.BeginTx(ctx, nil)
		if err != nil {
			return nil, obj.makeErr(err)
		}
		__d = tx
		defer func() {
			if txErr := tx.Rollback(); txErr != nil && !errors.Is(txErr, sql.ErrTxDone) {
				err = obj.makeErr(errors.Join(err, txErr))
			}
		}()
	}
	err = __d.QueryRowContext(ctx, __stmt, __values...).Scan({{ addrof (flatten .Return) }})
	if !obj.txn {
		if err == nil {
			err = obj.makeErr(tx.Commit())
		}
	}
	if err == sql.ErrNoRows {
		return nil, nil
	}
	if err != nil {
		return nil, obj.makeErr(err)
	}
	return {{ arg .Return }}, nil
	{{- end }}
{{- end -}}
